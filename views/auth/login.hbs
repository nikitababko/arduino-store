<div class="container">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" role="tab" href="#login" data-toggle="tab">Войти</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" role="tab" href="#registr" data-toggle="tab">Зарегестрироваться</a>
        </li>
    </ul>

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="login">

            {{!-- Сообщение об ошибки --}}
            {{#if loginError}}
            <p class="alert">{{loginError}}</p>
            {{/if}}
            {{!-------------------------}}

            <h2>Вход в личный кабинет</h2>
            <form action="/auth/login" method="post">
                <div class="input-field">
                    <input class="validate" id="email" name="email" required type="email">
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email" data-success="right"></span>
                </div>

                <div class="input-field">
                    <input class="validate" id="password" name="password" required type="password">
                    <label for="password">Введите пароль</label>
                    <span class="helper-text" data-error="Введите пароль" data-success="right"></span>
                </div>


                {{!---------------- инпут для защиты ----------------}}
                <input type="hidden" name="_csrf" value="{{csrf}}">
                {{!--------------------------------------------------}}


                <p class="reset-pass"><a href="/auth/reset">Восстановить пароль</a></p>

                <button class="btn btn-person">Войти</button>
            </form>
        </div>

        <div id="register" class="col s6 offset-s3">

            {{!-- Сообщение об ошибки --}}
            {{#if registerError}}
            <p class="alert">{{registerError}}</p>
            {{/if}}
            {{!-------------------------}}

        </div>



        <div role="tabpanel" class="tab-pane" id="registr">

            {{!-- Сообщение об ошибки --}}
            {{#if registerError}}
            <p class="alert">{{registerError}}</p>
            {{/if}}
            {{!-------------------------}}

            <h2>Зарегистрироваться</h2>
            <form action="/auth/register" method="post" novalidate>
                <div class="input-field">
                    <input class="validate" id="remail" name="email" required type="email">
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введите email" data-success="right"></span>
                </div>

                <div class="input-field">
                    <input class="validate" id="rpassword" name="password" required type="password">
                    <label for="rpassword">Введите пароль</label>
                    <span class="helper-text" data-error="Введите пароль" data-success="right"></span>
                </div>

                <div class="input-field">
                    <input class="validate" id="confirm" name="confirm" required type="password">
                    <label for="confirm">Повторите пароль</label>
                    <span class="helper-text" data-error="Введите пароль" data-success="right"></span>
                </div>

                <div class="input-field">
                    <input class="validate" id="name" name="name" required type="text">
                    <label for="name">Введите ваше имя</label>
                    <span class="helper-text" data-error="Введите имя" data-success="right"></span>
                </div>


                {{!------------------ инпут для защиты --------------}}
                <input type="hidden" name="_csrf" value="{{csrf}}">
                {{!--------------------------------------------------}}


                <button class="btn btn-person">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>
<h1>Профиль</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
        <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
        <p>Фото ( картинка ) профиля отсутствует</p>
        {{/if}}
    </div>

    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p>Ваш email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input class="validate" id="name" name="name" required type="text" value="{{user.name}}">
                <label for="first_name">Ваше имя</label>
                <span class="helper-text" data-error="Введите имя" data-success="right"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Фото</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            {{!------------------ инпут для защиты --------------}}
            <input type="hidden" name="_csrf" value="{{csrf}}">
            {{!--------------------------------------------------}}
            <br><br><br>
            <button type="submit" class="btn">Изменить</button>
        </form>
    </div>
</div>